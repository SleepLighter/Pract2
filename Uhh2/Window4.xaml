<Window x:Class="Uhh2.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uhh2"
        mc:Ignorable="d"
        Title="Вход в Личный Кабинет" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label>Username:</Label>
        <TextBox Name="tbUsername"></TextBox>
        <Label>Password</Label>
        <PasswordBox x:Name="passwordBox" Password="12345" MaxLength="5" PasswordChanged="passwordBox_PasswordChanged"></PasswordBox>
        <Button x:Name="Login" Margin="5" Content="Login" Click="Login_Click"/>
        <Button x:Name="Menu" VerticalAlignment="Top" Margin="454,150,0,0" Content="Назад" Width="142" Height="45"  Click="Menu_click"/>
    </StackPanel>
</Window>
